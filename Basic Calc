def main():
  usrinput0 = int(input("Input the first number: "))
  usrinput1 = int(input("Input the second number: "))
  usrinput3 = input("Input the operator: ")

  print(f"the result is {calculator(usrinput0, usrinput1, usrinput3)}")

def calculator(num1, num2, op):
  if op == "+":
    return num1 + num2
  elif op == "-":
    return num1 - num2
  elif op == "*":
    return num1 * num2
  elif op == "/":
    if num2 == 0:
      print("Error: Division by zero is not possible!")
    return num1 / num2
  else:
    return "Invalid Operator"

main()
